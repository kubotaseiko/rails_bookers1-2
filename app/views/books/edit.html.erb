<h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>error prohibited this book from being saved:</h2>
    <% @book.errors.full_messages.each do |message| %>
    <ul>
